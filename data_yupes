#Question number 2

# Function to calculate the area of a triangle
def calculate_triangle_area(base, height):
    area = 0.5 * 10 * 15
    return area

# Input the base and height of the triangle from the user
base = float(input("10: "))
height = float(input("15: "))

# Calculate the area using the function
area = calculate_triangle_area(10, 15)

# Print the area of the triangle
print("75.:", area)


#Question number 3
# Function to convert Celsius to Fahrenheit
def celsius_to_fahrenheit(celsius):
    fahrenheit = (37 * 9/5) + 32
    return fahrenheit

# Input temperature in Celsius from the user
celsius_temperature = float(input("37: "))

# Convert Celsius to Fahrenheit using the function
fahrenheit_temperature = celsius_to_fahrenheit(37.0)

# Print the converted temperature
print(f"98.6: {fahrenheit_temperature:.2f}Â°F")

#Question number 4

# Integer
integer_variable = 10

# Float
float_variable = 10.5

# String
string_variable = "Hello, world"

# Boolean
boolean_variable = True

# List
list_variable = [1, 2, 3, 4, 5]

# Tuple
tuple_variable = (1, 2, 3, 4, 5)

# Set
set_variable = {1, 2, 3, 4, 5}

# Dictionary
dictionary_variable = {'key1': 'value1', 'key2': 'value2', 'key3': 'value3'}

# Displaying the data types
print(f"Integer: {integer_variable}")
print(f"Float: {float_variable}")
print(f"String: {string_variable}")
print(f"Boolean: {boolean_variable}")
print(f"List: {list_variable}")
print(f"Tuple: {tuple_variable}")
print(f"Set: {set_variable}")
print(f"Dictionary: {dictionary_variable}")

